<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewCar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/default_car"
        tools:srcCompat="@drawable/default_car" />

    <TextView
        android:id="@+id/textViewBrand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Brand"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/textViewModel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewCar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewMilleage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mileage"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewYear"
        app:layout_constraintStart_toStartOf="@+id/textViewYear"
        app:layout_constraintTop_toBottomOf="@+id/textViewYear" />

    <TextView
        android:id="@+id/textViewModel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Model"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/textViewYear"
        app:layout_constraintEnd_toEndOf="@+id/textViewBrand"
        app:layout_constraintStart_toStartOf="@+id/textViewBrand"
        app:layout_constraintTop_toBottomOf="@+id/textViewBrand" />

    <TextView
        android:id="@+id/textViewYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Year"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/textViewMilleage"
        app:layout_constraintEnd_toEndOf="@+id/textViewModel"
        app:layout_constraintStart_toStartOf="@+id/textViewModel"
        app:layout_constraintTop_toBottomOf="@+id/textViewModel" />
</androidx.constraintlayout.widget.ConstraintLayout>